<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>URL Shortener</title>
  <style>
    table {
      border-collapse: collapse;
    }

    table, th, td {
      border: 1px solid black;
    }

    th, td {
      padding: 10px;
      text-align: left;
    }

    th {
      background-color: #007bff;
      color: white;
    }
  </style>
</head>
<body>
  <h1>URL Shortener</h1>
  <form method="POST" action="/api/url">
    <input type="text" name="fullUrl" placeholder="Enter URL...">
    <button type="submit">Shorten</button>
  </form>
  <br>
  <table>
    <thead>
      <tr>
        <th>Full URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
      </tr>
    </thead>
    <tbody>
      <% shortUrls.forEach(shortUrl => { %>
        <tr>
          <td><%= shortUrl.full %></td>
          <td><a href="/api/url/<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
          <td><%= shortUrl.clicks %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
